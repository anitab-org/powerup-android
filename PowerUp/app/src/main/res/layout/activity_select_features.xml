<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curtains"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="powerup.systers.com.SelectFeaturesActivity">

    <ImageView
        android:id="@+id/imageViewSelectFeature"
        android:layout_width="@dimen/select_feature_image_view"
        android:layout_height="@dimen/select_feature_image_view"
        android:layout_below="@+id/textViewSelectFeature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/select_feature_image_view_margin"
        android:src="@drawable/hair1" />

    <ImageButton
        android:id="@+id/leftSelectFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewSelectFeature"
        android:layout_alignStart="@+id/imageViewSelectFeature"
        android:layout_below="@+id/imageViewSelectFeature"
        android:layout_marginTop="@dimen/select_feature_image_view_margin"
        android:src="@drawable/ic_keyboard_arrow_left_white_18dp" />

    <ImageButton
        android:id="@+id/rightSelectFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageViewSelectFeature"
        android:layout_alignRight="@+id/imageViewSelectFeature"
        android:layout_below="@+id/imageViewSelectFeature"
        android:layout_marginTop="@dimen/select_feature_image_view_margin"
        android:src="@drawable/ic_keyboard_arrow_right_white_18dp" />

    <TextView
        android:id="@+id/textViewSelectFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/select_feature_image_view_margin"
        android:layout_marginTop="@dimen/select_feature_image_view_margin"
        android:hint="@string/select_feature"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/endingscreen6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/select_feature_coin_width"
        android:layout_height="@dimen/select_feature_coin_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/back_background"
        android:gravity="center"
        android:text="@string/select_feature_coins"
        android:textColor="@color/powerup_black"
        android:textSize="@dimen/final_avatar_text_view_text_size" />
</RelativeLayout>
